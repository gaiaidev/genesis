{
  "name": "genesis-clean-core",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node apps/api/src/index.mjs",
    "compose": "node apps/composer/compose.mjs",
    "validate": "node scripts/validate_api.mjs",
    "guard:anti-fake": "bash scripts/anti-fake-guard.sh",
    "guard:no-padding": "bash scripts/no-padding-audit.sh . logs/no_padding.log",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "ci:lint": "eslint .",
    "ci:typecheck": "tsc --noEmit",
    "ci:test": "vitest run --coverage",
    "ci:guards": "bash scripts/anti-fake-guard.sh && bash scripts/no-padding-audit.sh . logs/no_padding_ci.log",
    "ci:perf": "node scripts/perf_guard.mjs",
    "ci:all": "npm run ci:lint && npm run ci:typecheck && npm run ci:test && npm run ci:guards && npm run ci:perf",
    "prepare": "husky",
    "lint:fix": "eslint . --fix",
    "ci:lint:strict": "eslint . --max-warnings=0",
    "compose:safe": "GENESIS_OUTDIR=build/genesis_out bash scripts/compose_safe.sh",
    "release:precheck": "npm run ci:all",
    "release:patch": "npm run release:precheck && npm version patch -m \"chore(release): v%s\" && git push && git push --tags",
    "release:minor": "npm run release:precheck && npm version minor -m \"chore(release): v%s\" && git push && git push --tags",
    "release:major": "npm run release:precheck && npm version major -m \"chore(release): v%s\" && git push && git push --tags"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "typescript": "^5.5.4",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "express": "^4.19.2"
  },
  "engines": {
    "node": ">=18"
  },
  "version": "0.0.2"
}
